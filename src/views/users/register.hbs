<div class="container">
    <h1 class="text-center my-3 display-4">Create One account</h1>
    <div class="card col-12 col-sm-12 col-md-6 col-lg-6 mx-auto my-3 shadow-lg">
        <div class="img-card">
            <img src="/img/undraw_private_data_7q35.svg" class="img-fluid mt-2" alt="Add Tasks">
        </div>
        <div class="card-body">
            <form action="/notes/newusers" method="post">
                <div class="form-group">
                    <label for="name_tasks">Name from this User <i class="fa fa-users ml-2"></i></label>
                    <input type="text" name="name" autofocus class="form-control" id="name_tasks" placeholder="Full name" required>
                </div>
                <div class="form-group">
                    <label for="name_tasks">Email from this User <i class="fa fa-envelope ml-2"></i> </label>
                    <input type="email" name="email" autofocus class="form-control" id="name_tasks" aria-errormessage="No as writer null" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="description_tasks">Writer password <i class="fa fa-key ml-2"></i> </label>
                    <input type="password" name="password" placeholder="Writer password" class="form-control" rows="3"
                        id="description_tasks" required>
                    
                </div>
                <button class="btn btn-block btn-primary">Save account <i class="fa fa-save ml-2"></i></button>
            </form>
        </div>
        <div class="card-footer">
            <small>Hello Note Tasks what your go write today </small>
        </div>
    </div>
</div>